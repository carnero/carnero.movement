<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/map"
        android:layout_alignParentTop="true"
        android:padding="16dp" >

        <TextView
            style="@style/Text.Label"
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />

        <TextView
            style="@style/Text"
            android:id="@+id/stats_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:ellipsize="end" />
        <TextView
            style="@style/Text"
            android:id="@+id/stats_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/stats_steps"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:ellipsize="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/stats_steps"
            android:layout_alignStart="@id/stats_steps"
            android:layout_alignEnd="@id/stats_steps"
            android:layout_marginTop="-3dp"
            android:background="@drawable/line_steps"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/stats_distance"
            android:layout_alignStart="@id/stats_distance"
            android:layout_alignEnd="@id/stats_distance"
            android:layout_marginTop="-3dp"
            android:background="@drawable/line_distance"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_container"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_data_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/no_data"
            android:contentDescription="@string/no_data" />
        <TextView
            style="@style/Text.NoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/no_data_icon"
            android:text="@string/no_data" />
    </RelativeLayout>

    <com.echo.holographlibrary.SmoothLineGraph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/map"
        android:layout_below="@id/stats_container"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:lineAxisColor="@color/none" />
</RelativeLayout>
