<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp">

        <TextView
            style="@style/Text.Label"
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />

        <TextView
            style="@style/Text"
            android:id="@+id/stats_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:ellipsize="end" />
        <TextView
            style="@style/Text"
            android:id="@+id/stats_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/stats_steps"
            android:singleLine="true"
            android:ellipsize="end" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_container"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_data_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/no_data"
            android:contentDescription="@string/no_data" />
        <TextView
            style="@style/Text.NoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/no_data_icon"
            android:text="@string/no_data" />
    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/map"
        android:background="@color/separator" />

    <carnero.movement.common.graph.SplineGraph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_container"
        android:layout_above="@id/separator"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/visual_helper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_container"
        android:layout_above="@id/map"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/divider_full" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/divider_full" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/divider_full" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
    </LinearLayout>
</RelativeLayout>
