<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:indeterminate="true"
        app:spb_sections_count="4"
        app:spb_color="@color/primary"
        app:spb_speed="0.7"
        app:spb_stroke_width="4dp"
        app:spb_stroke_separator_length="4dp"
        app:spb_reversed="false"
        app:spb_mirror_mode="true"
        app:spb_progressiveStart_activated="true"
        app:spb_progressiveStart_speed="0.5"
        app:spb_progressiveStop_speed="1.0" />

    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/progressbar"
        android:gravity="end|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" >

        <TextView
            style="@style/Text"
            android:id="@+id/stats_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            style="@style/Text"
            android:id="@+id/stats_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_container"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_data_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/no_data"
            android:contentDescription="@string/no_data" />

        <TextView
            style="@style/Text.NoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/no_data_icon"
            android:text="@string/no_data" />
    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/map"
        android:background="@color/separator" />

    <RelativeLayout
        android:id="@+id/checkins_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_container"
        android:layout_above="@id/separator"
        android:layout_marginTop="16dp" />

    <carnero.movement.common.graph.SplineGraph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_container"
        android:layout_above="@id/separator"
        android:layout_marginTop="16dp" />
</RelativeLayout>
