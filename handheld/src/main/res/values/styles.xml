<resources>
    <style name="MovementTheme" parent="Theme.AppCompat">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>

        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenu.Large</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenu.Small</item>

        <item name="android:actionBarWidgetTheme">@style/OverflowMenuText</item>
    </style>

    <style name="MovementTheme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="OverflowMenuText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="PopupMenu" />
    <style name="PopupMenu.Large" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large" >
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="PopupMenu.Small" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" >
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Text" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Text.Active">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Label.Sub">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Value">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Value.Label">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Value.Value">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Text.Value.Value.Sub">
        <item name="android:textColor">@color/text_lighter</item>
    </style>

    <style name="Text.NoData">
        <item name="android:textColor">@color/text_nodata</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/divider</item>
    </style>
</resources>